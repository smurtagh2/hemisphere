{
  "name": "hemisphere",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.1.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format",
    "clean": "turbo run clean --continue",
    "validate-content": "tsx scripts/validate-content.ts",
    "validate-content:watch": "tsx scripts/validate-content.ts --watch",
    "validate-content:ci": "tsx scripts/validate-content.ts --ci --report=github",
    "db:seed": "tsx scripts/seed-content.ts",
    "db:seed:dev": "tsx packages/db/src/seed.ts",
    "fsrs:optimize": "tsx scripts/optimize-fsrs.ts"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chokidar": "^4.0.3",
    "drizzle-orm": "^0.37.0",
    "glob": "^11.0.1",
    "js-yaml": "^4.1.0",
    "postgres": "^3.4.6",
    "tsx": "^4.19.2",
    "turbo": "2.5.8",
    "typescript": "^5.7.3"
  }
