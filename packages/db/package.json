{
  "name": "@hemisphere/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "echo \"No tests yet for @hemisphere/db\""
  },
  "dependencies": {
    "drizzle-orm": "^0.37.0",
    "postgres": "^3.4.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "drizzle-kit": "^0.29.1",
    "typescript": "^5.7.3"
  }
}
